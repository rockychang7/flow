---
import RootLayout from "@/layouts/RootLayout.astro";
import Header from "@/components/common/header.astro";
import Footer from "@/components/common/footer.astro";
import { Badge } from "@/components/ui/badge";
import { changelogs } from "@/data/changelog-info";

const title = "Changelog";
---

<RootLayout title={title} maxWidth="max-w-2xl">
    <Header/>

    <div class="mt-8 mb-16">
        <h1 class="text-3xl font-bold tracking-tight mb-2">Changelog</h1>
        <p class="text-muted-foreground mb-12">记录网站的成长与变迁。</p>

        <div class="relative border-l border-border/50 ml-3 space-y-12">
            {changelogs.map((log) => (
                <div class="relative pl-8 group">
                    {/* Time dot */}
                    <span class={`absolute left-[-5px] top-2 h-2.5 w-2.5 rounded-full border border-background ring-4 ring-background ${log.isMajor ? 'bg-primary' : 'bg-muted-foreground/40'}`}></span>

                    <div class="flex flex-col gap-1 mb-3">
                        <div class="flex items-center gap-3">
                            <span class="font-mono text-sm text-muted-foreground">{log.date}</span>
                            <Badge variant={log.isMajor ? "default" : "secondary"} className="text-[10px] px-1.5 py-0 h-5">
                                {log.version}
                            </Badge>
                        </div>
                    </div>

                    <div class="bg-card/50 rounded-lg border border-border/40 p-5 hover:border-border transition-colors">
                        <p class="text-foreground font-medium mb-3">{log.description}</p>
                        <ul class="space-y-1.5">
                            {log.features.map(feature => (
                                <li class="text-sm text-muted-foreground flex items-start gap-2">
                                    <span class="mt-1.5 w-1 h-1 rounded-full bg-primary/40 shrink-0"></span>
                                    <span>{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <Footer/>
</RootLayout>
