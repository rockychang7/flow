---
import RootLayout from "../layouts/RootLayout.astro";
import Footer from "../components/common/footer.astro";
import Header from "../components/common/header.astro";
import {getCollection} from "astro:content";
import {Separator} from "@/components/ui/separator";
import CategoryListItem from "@/components/category-list-item.astro";

const title: string = "Categories";
const allBlogPosts = await getCollection("articles", ({data}) => data.draft !== true);
// 获取所有不同的 category
const filteredPosts = allBlogPosts.filter((post, index, arr) => {
    const category = post.data.category;
    return !arr.slice(0, index).some(p => p.data.category === category);
}).sort();


---
<RootLayout title={title}>
    <Header/>
    <div class="flex flex-col mt-8 gap-y-4">
        <h1 class="text-sm font-bold text-muted-foreground uppercase tracking-wider border-b border-border/40 pb-2">CATEGORIES</h1>
        <div class="flex flex-col gap-y-2">
            {filteredPosts.map(article => (
                <CategoryListItem
                    name={article.data.category}
                    count={allBlogPosts.filter(post => post.data.category === article.data.category).length}
                    url={`/categories/${article.data.category}`}
                />
            ))}
        </div>
    </div>

    <Footer/>
</RootLayout>