---
import RootLayout from "@/layouts/RootLayout.astro";
import Header from "../components/common/header.astro";
import Footer from "../components/common/footer.astro";
import {AboutHero} from "@/components/about/about-hero";
import {BlogGoals} from "@/components/about/blog-goals";
import {PersonalInfo} from "@/components/about/personal-info";
import {TechStack} from "@/components/about/tec-stack";

const title: string = "关于";
---
<RootLayout title={title}>
    <Header/>
    <div class="min-h-screen bg-gradient-to-b from-background to-background/80 px-1.5 py-8">
        <div class="max-w-4xl mx-auto space-y-12">
            <AboutHero />
            <BlogGoals />
            <TechStack />
            <PersonalInfo />
        </div>
    </div>
    <Footer/>
</RootLayout>
