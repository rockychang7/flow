---
interface Props {
    title: string;
    description: string;
    url: string;
}

const {title, description, url} = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer"
   class="group flex items-center justify-between py-2 transition-colors relative">
    <div class="flex flex-col gap-1 relative overflow-hidden">
        <span class="text-lg font-normal group-hover:text-primary transition-colors text-foreground decoration-0 w-fit">
            {title}
        </span>
        <span class="text-sm text-muted-foreground">{description}</span>
        <span class="absolute bottom-0 left-0 w-full h-px bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-out origin-left"></span>
    </div>

    <span class="text-sm text-muted-foreground italic ml-4 shrink-0 opacity-60 group-hover:opacity-100 transition-opacity">â†’</span>
</a>
